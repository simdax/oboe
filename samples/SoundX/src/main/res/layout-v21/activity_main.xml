<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context="com.SoundX.MainActivity"
    tools:layout_editor_absoluteX="-9dp"
    tools:layout_editor_absoluteY="0dp">

    <Button
        android:id="@+id/button_toggle_effect"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:text="@string/start_effect"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/status_view_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/presets" />

    <TextView
        android:id="@+id/status_view_text"
        android:layout_width="240dp"
        android:layout_height="116dp"
        android:layout_marginBottom="124dp"
        android:lines="6"
        android:text="@string/status_warning"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_effect"
        tools:text="Status"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/presets"
        android:layout_width="343dp"
        android:layout_height="57dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintBottom_toTopOf="@+id/button_toggle_effect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="216dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="338dp"
        android:layout_height="121dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="23dp"
        android:text="@string/le_pouvoir_de_l_inclusivit_ndans_votre_poche"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Debug"
        tools:ignore="TextSizeCheck"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="309dp"
        android:layout_height="92dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="@string/activez_la_premi_re_ia_qui_traduit_en_temps_r_el_le_son_en_vibrations_fait_pour_et_par_la_communaut_sourde"
        android:textAlignment="textStart"
        android:textColor="#919191"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/presets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="TextSizeCheck" />

    <include
        layout="@layout/devices"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <RadioGroup
        android:id="@+id/Debug"
        android:layout_width="352dp"
        android:layout_height="340dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/aaFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaFilter" />

        <EditText
            android:id="@+id/aaFilterLen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/quickSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quickSeek" />

        <EditText
            android:id="@+id/sequence_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/seekwindow_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/overlap_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
