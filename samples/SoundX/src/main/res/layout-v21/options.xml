<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">

    <Switch
        android:id="@+id/manualMode"
        android:layout_width="154dp"
        android:layout_height="44dp"
        android:layout_marginTop="68dp"
        android:text="No IA mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_effect" />

    <Button
        android:id="@+id/VibrationPresetsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:text="Presets"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_effect" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="152dp"
        android:layout_height="28dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="28dp"
        android:text="Vibrations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_effect" />

    <Button
        android:id="@+id/customize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:text="customize"
        app:layout_constraintStart_toEndOf="@+id/manualMode"
        app:layout_constraintTop_toBottomOf="@+id/VibrationPresetsButton" />
</merge>